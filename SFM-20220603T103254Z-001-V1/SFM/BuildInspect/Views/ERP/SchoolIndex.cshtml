@model IEnumerable<BuildInspect.Models.ViewModel.SchoolMasterViewModel>

@{
    Layout = null;
}

  

<div class="app-inner-layout app-inner-layout-page">
    <div class="app-inner-layout__wrapper">
        <div class="app-inner-layout__content pt-1">
            
            <div class="tab-content">
                <div class="container-fluid">
                    <section class="content-header">
                        <h4>
                            Building List
                        </h4>
                        @*<ol class="breadcrumb">
                            <li><a href="#"><i class="fa fa-dashboard"></i> BuildInspect</a></li>
                            <li>School</li>
                            <li class="active">Config</li>
                        </ol>*@
                    </section>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">

                                    
                                        <div class="box-header with-border">
                                            <a href="" onclick="CreateSchool()" data-toggle="modal" class="btn-icon btn btn-primary"><i class="fas fa-plus-square btn-icon-wrapper"></i> New Building</a>
                                        </div>
                                        <div class="box-body">
                                            <table id="schoolTable"  style="width: 100%;" class="table table-hover table-striped table-bordered">
                                                <thead style="background-color: #575555; color: white">
                                                    <tr>
                                                        <th>Sl No</th>
                                                        <th>Zone</th>
                                                        <th>Building Name</th>
                                                        <th>Address</th>
                                                        <th>Op. Manager</th>
                                                        <th>Mobile</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{ 
                                                        var i = 0;
                                                    }
                                                    @foreach (var item in Model)
                                                    {
                                                        i = i + 1;
                                                        <tr>
                                                            <td style="width:100px;">@i</td>
                                                            <td >@item.Zone</td>
                                                            <td style="width:200px;">@item.School_Name</td>
                                                            <td style="width:200px;">@item.Address</td>
                                                            <td>@item.Prefix &nbsp; @item.Op_Manager_Name</td>
                                                            <td>@item.Mobile</td>
                                                            <td style="width:150px;">
                                                                <button class="mb-2 mr-2 btn-icon btn-icon-only btn btn-success" onclick="EditSchool(@item.SchoolID)"><i class="fas fa-edit"></i></button>
                                                                <button class="mb-2 mr-2 btn-icon btn-icon-only btn btn-danger" onclick="DeleteSchool('@item.SchoolID','@item.School_Name')"><i class="fas fa-trash-alt"></i></button>
                                                                
                                                            </td>
                                                        </tr>

                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                   

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    
   

    function DeleteSchool(id,un) {

        Lobibox.confirm({
            iconClass: false,
            msg: 'Are you sure to delete the school ' + un + '?',
            callback: function (lobibox, type) {
                var btnType;
                if (type === 'no') {
                    btnType = 'warning';
                } else if (type === 'yes') {
                    btnType = 'success';
                    DeleteSchoolConfirmed(id);

                } 
                //Lobibox.notify(btnType, {
                //    size: 'mini',
                //    msg: 'This is ' + btnType + ' message'
                //});
            }
        });

    }

 

