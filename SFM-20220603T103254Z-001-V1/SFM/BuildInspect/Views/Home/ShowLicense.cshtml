@model BuildInspect.Models.ViewModel.LicenseViewModel

@{
    Layout = null;
}

@{
    var groupID = BuildInspect.Models.Utility.AppSession.GetCurrentUserGroup();
    var companyID = BuildInspect.Models.Utility.AppSession.GetCompanyId();
}

<style>
    .required::after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>

<p>
    &nbsp;
</p>

<div class="app-inner-layout app-inner-layout-page">
    <div class="app-inner-layout__wrapper">
        <div class="app-inner-layout__content pt-1">

            <div class="tab-content">
                <div class="container-fluid">
                    <section class="content-header">
                        <h4>
                            Show License 
                        </h4>
                       
                    </section>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    <div class="box-header with-border">
                                        <input type="button" value="Back" id="edit_user-back" class="btn btn-primary pull-left LicenseIndex" />
                                       
                                    </div>

                                    <div class="box-body">

                                   <div>&nbsp;</div>

                                            <div>
                                                <div class="row">

                                                    <div class="col-xl-3">&nbsp;</div>

                                                    <div class="col-xl-6">


                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">Company Name</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">

                                                                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">License Start Date</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">
                                                                @{

                                                                    var stdt = Convert.ToDateTime(Model.License_Start_Date).ToString("dd/MM/yyyy");

                                                                    Model.License_Start_Date = stdt.ToString();
                                                                }


                                                                @Html.EditorFor(model => model.License_Start_Date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">License End Date</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">
                                                                @{
                                                                    DateTime org_end_date = Convert.ToDateTime(Model.License_End_Date);

                                                                    var eddt = Convert.ToDateTime(Model.License_End_Date).ToString("dd/MM/yyyy");

                                                                    Model.License_End_Date = eddt.ToString();
                                                                }


                                                                @Html.EditorFor(model => model.License_End_Date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">No of Days</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">


                                                                @Html.EditorFor(model => model.No_of_Days, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                            </div>
                                                        </div>


                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">Days to Expire</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">
                                                                @{

                                                                    DateTime curdt = DateTime.Now;



                                                                    var no_days = Math.Round((org_end_date - curdt).TotalDays);

                                                                    if(no_days < 0)
                                                                    {
                                                                        no_days = 0;
                                                                    }



                                                                    //  string diff2 = Math.Round((Convert.ToDateTime(item.License_End_Date) - curdt).TotalDays).ToString();

                                                                    Model.days_to_expire = no_days.ToString();
                                                                }


                                                                @Html.EditorFor(model => model.days_to_expire, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                            </div>
                                                        </div>

                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">Status</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">
                                                                @{
                                                                    var status = "";

                                                                    if (Model.IsActive == 0)
                                                                    {
                                                                        status = "Not activated";
                                                                    }
                                                                    else if (Model.IsActive == 1)
                                                                    {
                                                                        status = "Activated - In live";
                                                                    }
                                                                    else if (Model.IsActive == 2)
                                                                    {
                                                                        status = "Expired";
                                                                    }

                                                                    //  string diff2 = Math.Round((Convert.ToDateTime(item.License_End_Date) - curdt).TotalDays).ToString();

                                                                    Model.status = status;
                                                                }


                                                                @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                            </div>
                                                        </div>



                                                        <div class="row form-group">
                                                            <label for="username" class="col-sm-12 col-md-6 col-xl-3 control-label">License Key</label>
                                                            <div class="col-sm-12 col-md-6 col-xl-9">

                                                                @Html.EditorFor(model => model.LicenseKey, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                            </div>
                                                        </div>


                                                    </div>

                                                    <div class="col-xl-3">&nbsp;</div>

                                                </div>

                                            </div>

                                   

                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
  
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");


</script>