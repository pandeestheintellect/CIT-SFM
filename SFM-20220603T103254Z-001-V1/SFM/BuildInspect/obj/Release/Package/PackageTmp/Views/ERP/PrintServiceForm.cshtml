                   <tr>
                       <td style="width:25%">&nbsp;</td>
                       <td style="font-weight:bold; font-size: 18px;width:45%" align="center">WORK SERVICE ORDER</td>
                       <td align="right" style="color: red; font-size: 20px;width:30%">
                       <span style="color: black; font-weight: bold;font-size:16px;">S/No:</span> @Model.ServiceRefNum
                       </td>
                   </tr>
               </table>
               
               </td>
           </tr>
           <tr><td><br /></td></tr>
           <tr>
               <td>
                   <table width="890" cellspacing="0" cellpadding="0" style="border: double">
                       <tr><td><br /></td></tr>
                       <tr>
                          <td>
                              <table width="880">
                                  <tr>
                                  <td style="width:30%">Case Ref Num</td>
                                  <td style="width:5%">:</td>
                                  <td style="width:65%">@Model.CaseRefNum</td>
                                  </tr>

                                  <tr>
                                      <td style="width:30%">Severity</td>
                                      <td style="width:5%">:</td>
                                      <td style="width:65%">@Model.Priority</td>
                                  </tr>

                                  <tr>
                                      <td style="width:30%">Date / Time</td>
                                      <td style="width:5%">:</td>
                                      <td style="width:65%">@Convert.ToDateTime(Model.Service_Datetime).ToString("dd/MM/yyyy HH:mm") &nbsp; Hrs</td>
                                  </tr>
                              </table>
                          </td>
                       </tr>
                   </table>

               </td>
           </tr>

           <tr>
               <td>
                   <table width="890" cellspacing="0" cellpadding="0" style="border: double">
                       
                       <tr>
                           <td>
                               <table width="880">
                                   <tr>
                                       <td style="width:30%">Customer's Name</td>
                                       <td style="width:5%">:</td>
                                       <td style="width:65%">@ViewBag.SchoolName</td>
                                   </tr>

                                   <tr>
                                       <td style="width:30%">Address</td>
                                       <td style="width:5%">:</td>
                                       <td style="width:65%">@ViewBag.Address</td>
                                   </tr>

                                   <tr>
                                       <td style="width:30%">Person to Contact</td>
                                       <td style="width:5%">:</td>
                                       <td style="width:65%">@Model.Contact_Person</td>
                                   </tr>
                               </table>
                           </td>
                       </tr>
                   </table>

               </td>
           </tr>

           <tr>
               <td>
                   <table width="890" cellspacing="0" cellpadding="0" style="border: double">
                       
                       <tr>
                           <td>
                               <table width="880">
                                   <tr>
                                       <td colspan="2">Location: &nbsp; @Model.Location</td>                                       
                                       <td>Room No: &nbsp; @Model.RoomNo</td>
                                   </tr>

                                   <tr>
                                       <td colspan="3" style="font-weight: bold">Instructions to Carry out works</td>
                                       
                                   </tr>

                                   <tr>
                                       <td colspan="3" style="font-weight: bold">Services M & E</td>
                                   </tr>
                                   <tr style="height: 40px;">
                                       <td colspan="3">Work Requests: &nbsp; @Model.Work_Requests</td>
                                   </tr>
                                   <tr>
                                       <td style="width: 30%" valign="bottom">@Model.Customer_incharge_Name</td>
                                       <td style="width: 40%" valign="bottom"><img height="85" width="200" src="@Model.Customer_incharge_Signature" /></td>
                                       <td style="width: 30%"></td>
                                   </tr>
                                   <tr>
                                       <td style="width: 30%">____________________</td>
                                       <td style="width: 40%">____________________</td>
                                       <td style="width: 30%">____________________</td>
                                   </tr>

                                   <tr>
                                       <td style="width: 30%">Name of Person</td>
                                       <td style="width: 40%">Signature</td>
                                       <td style="width: 30%">Stamp</td>
                                   </tr>
                               </table>
                           </td>
                       </tr>
                   </table>

               </td>
           </tr>

           <tr>
               <td>
                   <table width="890" cellspacing="0" cellpadding="0" style="border: double">
                       
                       <tr>
                           <td>
                               <table width="880">
                                   <tr>
                                       <td style="font-weight:bold; text-decoration: underline">Completion of Works</td>                                       
                                   </tr>

                                   <tr>
                                       <td style="font-weight: bold">The work have been completed satisfactory.</td>
                                   </tr>

                                   <tr style="height: 100px;">
                                       <td>@Model.Work_Completion_Details</td>
                                   </tr>
                                 
                               </table>
                           </td>
                       </tr>
                   </table>

               </td>
           </tr>

