@model BuildInspect.Models.ViewModel.FilterViewModel
@using BuildInspect.Models.ViewModel

@{
    Layout = null;
    var groupID = BuildInspect.Models.Utility.AppSession.GetCurrentUserGroup();
    var companyID = BuildInspect.Models.Utility.AppSession.GetCompanyId();

    if (companyID == 1)
    {
        ViewBag.Company = "MKV-";
    }
    if (companyID == 2)
    {
        ViewBag.Company = "HEC-";
    }
    if (companyID == 3)
    {
        ViewBag.Company = "PPL-";
    }
}

 <style>
.summary-title span { border-radius:5px;padding:0 5px;text-align:center; }
.red { background:red; }
.yellow {background:yellow; }
.green { background:green; }
 </style> 

<div class="app-inner-layout app-inner-layout-page">
    <div class="app-inner-layout__wrapper">
        <div class="app-inner-layout__content pt-1">
            
            <div class="tab-content">
                <div class="container-fluid">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form", id = "liftchklstForm" }))
                {
                    @Html.AntiForgeryToken()
                    <section class="content-header">
                        <h4>
                            Operator wise Lift Checklist Status
                        </h4>
                        <div class="summaryreport-container">
                            <div class="row form-group">

                                <div class="col-sm-12 col-md-6 col-xl-1">
                                    <div class="title">Zone</div>
                                </div>
                                
                                
                                @if (groupID == 2)
                                { 
                                if (companyID == 1)
                                {
                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                        @Html.DropDownListFor(model => model.Zone, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value = "E1" , text = "E1" },
                                    new { value = "S1" , text = "S1" },
                                    new { value = "SW2" , text = "SW2" }
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control", @onchange = "zoneOnChange(this)" })
                                    </div>
                                }

                                if (companyID == 2)
                                {
                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                        @Html.DropDownListFor(model => model.Zone, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value = "N2" , text = "N2" },
                                    new { value = "NE1" , text = "NE1" },
                                    new { value = "W1" , text = "W1" }
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control"})
                                    </div>
                                }

                                if (companyID == 3)
                                {
                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                        @Html.DropDownListFor(model => model.Zone, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value = "E2" , text = "E2" },
                                    new { value = "NE2" , text = "NE2" },
                                    new { value = "SW1" , text = "SW1" }
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control"})
                                    </div>
                                    }
                                }
                                else
                                {
                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                        @Html.DropDownListFor(model => model.Zone, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value =  ViewBag.Zone , text = ViewBag.Zone }
                                    
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control" })
                                    </div>
                                }

                                

                                <div class="col-sm-12 col-md-6 col-xl-1">
                                    <div class="title">Month</div>
                                </div>
                                <div class="col-sm-12 col-md-6 col-xl-2">
                                    @Html.DropDownListFor(model => model.Month, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value = "01/01/" , text = "January" },
                                    new { value = "01/02/" , text = "February" },
                                    new { value = "01/03/" , text = "March" },
                                    new { value = "01/04/" , text = "April" },
                                    new { value = "01/05/" , text = "May" },
                                    new { value = "01/06/" , text = "June" },
                                    new { value = "01/07/" , text = "July" },
                                    new { value = "01/08/" , text = "August" },
                                    new { value = "01/09/" , text = "September" },
                                    new { value = "01/10/" , text = "October" },
                                    new { value = "01/11/" , text = "November" },
                                    new { value = "01/12/" , text = "December" }
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control" })

                                </div>

                                <div class="col-sm-12 col-md-6 col-xl-1">
                                    <div class="title">Year</div>
                                </div>
                                <div class="col-sm-12 col-md-6 col-xl-2">
                                    @Html.DropDownListFor(model => model.Year, new SelectList(
                                    new List<Object>{
                                    new { value = "Select" , text = "Select"  },
                                    new { value = "2019" , text = "2019" },
                                    new { value = "2020" , text = "2020" },
                                     new { value = "2021" , text = "2021" },
                                      new { value = "2022" , text = "2022" },
                                       new { value = "2023" , text = "2023" }
                                   }, "value", "text", 0), htmlAttributes: new { @class = "form-control" })
                                   
                                </div>

                                <div class="col-sm-12 col-md-6 col-xl-2">
                                    <button type="button" id="report-clliftmatrix-search" class="mb-2 mr-2 btn-icon btn btn-success maintenance-generate">
                                        <i class="fas fa-table"></i>
                                    Search</button>
                                    
                                </div>
                            </div>
                        </div>
                       
                    </section>

                    }
                    <div class="row">
                        <div class="col-md-12">
                            <div class="main-card mb-3 card">
                                <div class="card-body">
                                    
                                        <div class="box-header with-border">
                                            
                                           
                                        </div>
                                        <div class="box-body">
                                            <div class="summary-title">
                                                Lift Operator wise status for <span class="zone">Zone: @ViewBag.Zone</span>  - <span class="month-year">@ViewBag.Mon (@ViewBag.Freq)</span>
                                            </div> 
                                            @{ 
                                                ViewBag.FN = ViewBag.Zone + "-" + ViewBag.Mon + "-" + ViewBag.Freq;
                                            }
                                            <div class="summaryreport-container">
                                                <div class="row form-group">
                                                    <div class="col-sm-12 col-md-6 col-xl-1">
                                                        <div style="font-weight: bolder;">Legend:</div>                                                        
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-2">                                                        
                                                        <div><img src="Scripts/assets/images/not-applicable.png" /> - Not Applicable</div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                                        <div><img src="Scripts/assets/images/not-submitted.png" /> - Not Submitted</div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-2">
                                                        <div><img src="Scripts/assets/images/pending-user-ma.png" /> - Pending User & MA</div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-1">
                                                        <div><img src="Scripts/assets/images/pending-user.png" /> - Pending User</div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-1">
                                                        <div><img src="Scripts/assets/images/pending-ma.png" /> - Pending MA</div>
                                                    </div>
                                                    <div class="col-sm-12 col-md-6 col-xl-1">
                                                        <div><img src="Scripts/assets/images/completed.png" /> - Completed</div>
                                                    </div>
                                                </div>                                            
                                            </div>

                                                <table id="CLLiftTable" class="table table-hover table-striped table-bordered">
                                                    <thead style="background-color: #575555; color: white">

                                                        <tr>
                                                            <th style="width: 30px;">Sno</th>
                                                            <th style="width: 50px;">Zone</th>
                                                            <th>Project Name</th>
                                                            <th>Lift Operator Name</th>
                                                            <th style="width: 200px;">Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{ var i = 0;}
                                                        @foreach (var item in Model.pmvm)
                                                        {
                                                            i = i + 1;
                                                            var mark = "";
                                                            var color = "";
                                                            var status = "";
                                                            var image = "";
                                                            var mark1 = "";
                                                            <tr>
                                                                <td style="width:30px;">@i</td>
                                                                <td style="width:50px;">@ViewBag.Zone</td>
                                                                <td style="width:300px;">@item.School_Name</td>
                                                                <td style="width:400px;">@item.Lift_Opr_Name</td>                                                                
                                                                
                                                                    @{
                                                                        if (item.CLStatus == null)
                                                                        {
                                                                            mark = "fas fa-not-equal";
                                                                            color = "grey";
                                                                            status = "Not Applicable";
                                                                            image = "Scripts/assets/images/not-applicable.png";
                                                                        }
                                                                        else if (item.CLStatus <= 0)
                                                                        {
                                                                            mark = "fas fa-times-circle";
                                                                            color = "orange";
                                                                            status = "Not Submitted";
                                                                            image = "Scripts/assets/images/not-submitted.png";
                                                                        }
                                                                        else if (item.CLStatus == 1)
                                                                        {
                                                                            mark = "fas fa-dice-two";
                                                                            color = "mediumvioletred";
                                                                            status = "Pending at User & MA";
                                                                            image = "Scripts/assets/images/pending-user-ma.png";
                                                                        }
                                                                        else if (item.CLStatus == 2)
                                                                        {
                                                                            mark = "fas fa-handshake";
                                                                            color = "greenyellow";
                                                                            status = "Pending MA";
                                                                            image = "Scripts/assets/images/pending-ma.png";
                                                                        }
                                                                        else if (item.CLStatus == 3)
                                                                        {
                                                                            mark = "fas fa-dice-three";
                                                                            color = "blue";
                                                                            status = "Pending User";
                                                                            image = "Scripts/assets/images/pending-user.png";
                                                                        }
                                                                        else
                                                                        {
                                                                            mark = "fas fa-check-circle";
                                                                            color = "forestgreen";
                                                                            status = "Completed";
                                                                            image = "Scripts/assets/images/completed.png";
                                                                        }
                                                                    }
                                                                <td>
                                                                    <i class="@mark1" style="color: @color; font-size: 18px;">
                                                                        @status - <img src="@image" />
                                                                    </i>

                                                                </td>
                                                               
                                                            </tr>

                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                   

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


